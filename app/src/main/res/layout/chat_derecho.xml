<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/perfil_imagen"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_derecho"
            android:layout_marginEnd="5dp"
            android:maxWidth="250dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_toStartOf="@id/perfil_imagen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_derecho"
            android:layout_toLeftOf="@id/perfil_imagen"
            android:layout_marginRight="5dp"
            android:text="hello"
            android:textColor="#fff"
            android:padding="8dp"
            android:id="@+id/mostrar_mensaje"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:visibility="visible"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visto"
            android:layout_below="@id/rightLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</RelativeLayout>